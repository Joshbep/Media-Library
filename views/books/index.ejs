<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>
  <div class="inner-container">
    <h2 class="page-header">Search Books</h2>
    <form action="/books" method="GET">
      <div class="form-row">
        <div class="form-item">
          <label for="title">Title</label>
          <input type="text" name="title" value="<%=searchOptions.title%>">
        </div>
      </div>
      <div class="form-row">
        <div class="form-item">
          <label for="publishedAfter">Published After</label>
          <input type="date" name="publishedAfter" value="<%=searchOptions.publishedAfter%>">
        </div>
        <div class="form-item">
          <label for="publishedBefore">Published Before</label>
          <input type="date" name="publishedBefore" value="<%=searchOptions.publishedBefore%>">
        </div>
      </div>
      <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit" name="button">Search</button>
      </div>
    </form>
    <br>
  </body>
    <div class="">
    <% books.forEach(book => { %>
        <a href="/books/<%= book.id %>">
          <img width='100' height='150' class="book-cover" src=" <%= book.coverImagePath %> ">
        </a>
    <% }) %>
    </div>
    </div>
  </body>
</html>
