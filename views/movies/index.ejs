<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>
  <div class="inner-container">
    <h2 class="page-header">Search Movies</h2>
    <form action="/movies" method="GET">
      <div class="form-row">
        <div class="form-item">
          <label for="title">Title</label>
          <input type="text" name="title" value="<%=searchOptions.title%>">
        </div>
      </div>
      <div class="form-row">
        <div class="form-item">
          <label for="releasedAfter">Released After</label>
          <input type="date" name="releasedAfter" value="<%= searchOptions.releasedAfter %>">
        </div>
        <div class="form-item">
          <label for="releasedBefore">Released Before</label>
          <input type="date" name="releasedBefore" value="<%= searchOptions.releasedBefore %>">
        </div>
      </div>
      <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit" name="button">Search</button>
      </div>
    </form>
    <br>
    <%- include('../partials/movieGrid', { movies: movies }) %>
    </div>
  </body>
</html>
